<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jogodacalculadora">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JogoDaCalculadora">
        <activity
            android:name=".Activitys.ChoseSettingActivity"
            android:exported="false" />
        <activity
            android:name=".Activitys.HistoricoActivity"
            android:exported="false"
            android:label="@string/title_activity_historico"
            android:theme="@style/Theme.JogoDaCalculadora.NoActionBar" />
        <activity
            android:name=".Activitys.RankeadaActivity"
            android:exported="false" />
        <activity
            android:name=".Activitys.MudaInformacoesActivity"
            android:exported="false" />
        <activity
            android:name=".Activitys.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".Activitys.Cadastro_Activity"
            android:exported="false" />
        <activity
            android:name=".Activitys.OpcoesDeLoginActivity"
            android:exported="false" />
        <activity
            android:name=".Activitys.EstatisticasActivity"
            android:exported="false" />
        <activity
            android:name=".Activitys.PlayActivity"
            android:exported="false" />
        <activity
            android:name=".Activitys.Setting_Activity"
            android:exported="true" />
        <activity
            android:name=".Activitys.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>