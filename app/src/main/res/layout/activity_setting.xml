<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:barrierMargin="2dp"
    tools:context=".Activitys.Setting_Activity">

    <Button
        android:id="@+id/button27"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/ic_help"
        android:contentDescription="Informações sobre a variabilidade"
        android:onClick="helpCalculosSimples"
        app:layout_constraintBottom_toBottomOf="@+id/switchCalculoSimples"
        app:layout_constraintStart_toEndOf="@+id/switchCalculoSimples"
        app:layout_constraintTop_toTopOf="@+id/switchCalculoSimples" />

    <Button
        android:id="@+id/button26"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/ic_help"
        android:contentDescription="Informações sobre a variabilidade"
        android:onClick="helpValoresNegativos"
        app:layout_constraintBottom_toBottomOf="@+id/switchNegativos"
        app:layout_constraintStart_toEndOf="@+id/switchNegativos"
        app:layout_constraintTop_toTopOf="@+id/switchNegativos" />

    <Button
        android:id="@+id/button24"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_help"
        android:contentDescription="Informações sobre a variabilidade"
        android:onClick="helpValorMinimo"
        app:layout_constraintBottom_toBottomOf="@+id/button21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button21" />

    <Button
        android:id="@+id/button25"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_help"
        android:contentDescription="Informações sobre a variabilidade"
        android:onClick="helpValorMaximo"
        app:layout_constraintBottom_toBottomOf="@+id/button22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button22" />

    <TextView
        android:id="@+id/config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="1dp"
        android:text="Aplicativo"
        android:textColor="@color/textColor"
        android:textSize="48sp"
        app:barrierMargin="1dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Variabilidade (valor padrão: 10)"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@+id/editVaria"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editVaria"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="40dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:hint="Valor mínimo: 2"
        android:inputType="number"
        android:textColor="@color/textColor"
        android:textColorHint="#272727"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/button20"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/editMinimo"
        android:layout_width="00dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="40dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:hint="Valor mínimo: 0"
        android:inputType="number"
        android:textColor="@color/textColor"
        android:textColorHint="#272727"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/button21"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Primeiro número base (valor padrão: 0)"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@+id/editMinimo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Segundo número base (valor padrão: 10)"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@+id/editMaximo"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editMaximo"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="40dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:hint="Valor mínimo: 0"
        android:inputType="number"
        android:textColor="@color/textColor"
        android:textColorHint="#272727"
        app:layout_constraintBottom_toTopOf="@+id/switchNegativos"
        app:layout_constraintEnd_toStartOf="@+id/button22"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/back"
        android:backgroundTint="#0fe871"
        android:contentDescription="Voltar"
        android:onClick="fechar"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:onClick="Salvar"
        android:text="salvar alterações"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/switchNegativos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="40dp"
        android:checked="false"
        android:longClickable="false"
        android:text="Valores negativos"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@+id/switchCalculoSimples"
        app:layout_constraintStart_toStartOf="parent"
        tools:checked="true" />

    <Button
        android:id="@+id/button20"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:onClick="aplicarVariabilidade"
        android:text="Aplicar"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toStartOf="@+id/button23"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/button21"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:onClick="aplicarValorMinimo"
        android:text="Aplicar"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toStartOf="@+id/button24"
        app:layout_constraintTop_toTopOf="@+id/editMinimo" />

    <Button
        android:id="@+id/button22"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:onClick="aplicarValorMaximo"
        android:text="Aplicar"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toStartOf="@+id/button25"
        app:layout_constraintTop_toTopOf="@+id/editMaximo" />

    <Switch
        android:id="@+id/switchCalculoSimples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="60dp"
        android:text="Cálculos simples"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@+id/button10"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button23"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_help"
        android:contentDescription="Informações sobre a variabilidade"
        android:onClick="helpVariabilidade"
        app:layout_constraintBottom_toBottomOf="@+id/button20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button20" />

</androidx.constraintlayout.widget.ConstraintLayout>