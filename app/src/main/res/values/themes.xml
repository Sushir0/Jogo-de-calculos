<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JogoDaCalculadora" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00FFF7</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/corBGCima</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.JogoDaCalculadora.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="background.green" parent="ThemeOverlay.AppCompat">
        <item name="android:background">#CC57BC32</item>
    </style>


    <style name="SpinnerPersonalizado" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@color/corBGCima</item>
    </style>



    <style name="Theme.JogoDaCalculadora.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JogoDaCalculadora.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>